<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="master">
<head>
 <title metal:fill-slot="head-title">${title}</title>
</head>
<body>
 <h1 metal:fill-slot="body-title">${title}</h1>
 <div metal:fill-slot="body-content" ng-app="ubikdb_demo">
    <link rel="stylesheet" type="text/css" href="${request.static_url('sdi_ubikdb_demo:static/page_document.css')}" />

    <!-- ubikDB SimpleDemo -->
    <div class="infobox" ng-controller="SimpleDemo">
        <div ng-repeat="row in _.range(rows)">
            <div class="col"><b>Agent:</b>
                <input ng-model="$parent.agent" /><span class="agent-label" ng-bind="agent"></span>
            </div>
            <div class="col"><b>Boss:</b>
                <input ng-model="$parent.boss" /><span class="agent-label" ng-bind="boss"></span>
            </div>
        </div>
        <button ng-click="rows = rows + 1">Add</button>
    </div>

    <!-- ubikDB TableDemo -->
    <div class="infobox" ng-controller="TableDemo">
        <table>
            <thead>
                <th></th><th>Name</th><th>Salary</th>
            </thead>
            <tbody>
                <tr ng-repeat="row in salary">
                     <td><button ng-click="removeFromSalary(row);">Remove</button></td>
                     <td><input ng-model="row.name"
                        placeholder="Enter name..."/></td>
                     <td><input ng-model="row.value"
                        placeholder="Enter salary"/></td>
                </tr>
            </tbody>
        </table>
        <button ng-click="salary.push({});">Add</button>
    </div>

    <div tal:content="structure body">BODY</div>
    <script src="${request.static_url('ubikdb:static/dist/bower_components/socket.io-client/dist/socket.io.js')}"></script>
    <script src="${request.static_url('ubikdb:static/ubikdb.js')}"></script>
    <script src="${request.static_url('sdi_ubikdb_demo:static/dist/bower_components/lodash/dist/lodash.compat.js')}"></script>
    <script src="${request.static_url('sdi_ubikdb_demo:static/dist/bower_components/angular/angular.js')}"></script>
    <script src="${request.static_url('ubikdb:static/ubikdb_angular.js')}"></script>
    <script src="${request.static_url('sdi_ubikdb_demo:static/ubikdb_demo.js')}"></script>
 </div>
</body>
</html>
